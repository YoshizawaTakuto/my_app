<h3>新規登録</h3>

  <%= form_with model: @user do |f| %>
  <%= render "shared/error_message", model: f.object %>
    <table>
      <tr>
        <th><%= f.label :name, "名前" %></th>
        <td><%= f.text_field :name , class: "f" %></td>
      </tr>
      <tr>
        <th><%= f.label :email, "メールアドレス" %></th>
        <td><%= f.email_field :email , class: "f" %></td>
      </tr>
      <tr>
        <th><%= f.label :password, "パスワード" %></th>
        <td><%= f.password_field :password , class: "f" %></td>
      </tr>
      <tr>
        <th><%= f.label :password_confirmation, "パスワード(確認)" %></th>
        <td><%= f.password_field :password_confirmation , class: "f" %></td>
      </tr>
    </table>
    <%= f.submit "登録", class:"submit btn" %>
    <%= link_to "戻る", "/", class:"btn" %>
  <% end %>