<h3>ユーザー情報一覧</h3>

<table>
    <thead>
        <tr>
            <th>名前</th>
            <th>メールアドレス</th>
        </tr>
    </thead>
    <tbody>
      <% @users.each do |user|%>
        <tr>
            <td><%= link_to user.name, user_path(user), class: "link" %></td>
            <td><%= user.email %></td>
        </tr>
      <% end %>
    </tbody>
</table>



