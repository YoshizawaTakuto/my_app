<h3>ユーザー情報</h3>

<table> 
    <thead>
        <tr>
            <th>名前</th>
            <th>メールアドレス</th>
        </tr>
    </thead>
    <tbody>
        <tr>
            <td><%= @user.name %></td>
            <td><%= @user.email %></td>
        </tr>
    </tbody>
</table>
<% if @login_user == @user%>
  <%= link_to "編集", edit_user_path(@user), class: "btn"%>
<% end %>

<div class="user-posts">
    <h3 ><%= link_to "投稿一覧", user_path(@user), class: "link" %></h3>
    <h3><%= link_to "お気に入り一覧", "/users/#{@user.id}/likes", class: "link no-active" %>
</div>
<table>
    <thead>
        <tr>
            <th>投稿日</th>
            <th>題名</th>
        </tr>
    </thead>
    <tbody>
      <% @posts.each do |post|%>
        <tr>
            <td><%= post.created_at.to_s(:datetime_jp) %></td>
            <td><%= link_to post.title, post_path(post), class: "link" %></td>
        </tr>
      <% end %>
    </tbody>
</table>
<%= link_to "戻る", posts_path, class: "btn" %>