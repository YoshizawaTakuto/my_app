<h3>投稿一覧</h3>

<table>
    <thead>
        <tr>
            <th>投稿日</th>
            <th>名前</th>
            <th>題名</th>
        </tr>
    </thead>
    <tbody>
      <% @posts.each do |post|%>
        <tr>
            <td><%= post.created_at.to_s(:datetime_jp) %></td>
            <td><%= link_to post.user.name, user_path(post.user_id), class: "link" %></td>
            <td><%= link_to post.title, post_path(post), class: "link" %></td>
        </tr>
      <% end %>
    </tbody>
</table>